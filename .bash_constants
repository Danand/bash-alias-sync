#!/bin/bash
#
# Constants for sharing during loading of aliases.

export COLOR_BLACK='\033[0;30m'
export COLOR_RED='\033[0;31m'
export COLOR_GREEN='\033[0;32m'
export COLOR_YELLOW='\033[0;33m'
export COLOR_BLUE='\033[0;34m'
export COLOR_MAGENTA='\033[0;35m'
export COLOR_CYAN='\033[0;36m'
export COLOR_WHITE='\033[0;37m'
export COLOR_DIM="\033[2m"
export COLOR_CLEAR='\033[0m'
export COLOR_BOLD='\[\033[1m\]'

UPDATE_MARKER_FILE="/tmp/bash-alias-sync-scheduled-update"
export UPDATE_MARKER_FILE

BASH_PATH_FILE="${HOME}/.bash_path"
export BASH_PATH_FILE

BASH_SECRETS_FILE="${HOME}/.bash_secrets"
export BASH_SECRETS_FILE

BASH_OVERRIDES_FILE="${HOME}/.bash_overrides"
export BASH_OVERRIDES_FILE
